NODE_ENV=development
PORT=3201
JWT_SECRET=your_jwt_secret_key_here
DB_PATH=./database/app.db
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
GIT_REPOS_PATH=./repos
UID=1000
GID=1000

# Performance tuning
# TTL (seconds) for caching workspace repository scans
WORKSPACE_REPO_CACHE_TTL_SECONDS=300
# Max concurrent git commands
GIT_CONCURRENCY=8
# Exclude merge commits by default to reduce volume
GIT_EXCLUDE_MERGES=true
# If no startDate is provided, limit scans to the last N days (0 disables)
DEFAULT_SINCE_DAYS=0
